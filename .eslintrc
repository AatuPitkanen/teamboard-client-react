{
    "parser": "babel-eslint",

    "env": {
        "es6":     true,
        "browser": true
    },

    "rules": {
        "semi":   [ 0           ],
        "strict": [ 1, "never"  ],
        "quotes": [ 1, "single" ],

        "no-var":         [ 1 ],
        "no-undef":       [ 1 ],
        "no-console":     [ 1 ],
        "no-unused-vars": [ 1 ],
        "no-func-assign": [ 0 ],

        "key-spacing":       [ 1, { "align": "value" } ],
        "no-multi-spaces":   [ 0                       ],
        "space-in-brackets": [ 1, "always"             ],

        "eol-last":                [ 1 ],
        "no-multiple-empty-lines": [ 1, { "max": 1 } ]
    }
}